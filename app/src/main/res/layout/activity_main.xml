    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="233dp"
        android:layout_height="233dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
